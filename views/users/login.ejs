<% layout("layouts/boilerplate") %>

<div class="row">
  <h1 class="offset-3">Login</h1>
  <div class="col-6 mt-3 offset-3">
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>

      <button class="btn add-btn btn-dark">Login</button>
    </form>
    <div class="mt-3">
      <p>OR</p>
      &nbsp;<a href="/signup" class="btn btn-dark">signup</a>
    </div>
  </div>
</div>
